@page
@model TraceIP.Web.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div style="color: red">@ViewData["Message"]</div>
            <div class="form-group">
                <label asp-for="IPRequest.Search" class="control-label"></label>
            </div>
            <div class="row mt-1">
                <div class="col-lg-3">
                    <input asp-for="IPRequest.Search" class="form-control" />
                    <span asp-validation-for="IPRequest.Search" class="text-danger"></span>
                </div>
                <div class="col-lg-9">
                    <input type="submit" value="Consultar" class="btn btn-primary" />
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Ip)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Ip)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Current_date)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Current_date)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Country)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Country)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.City)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.City)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Iso_code)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Iso_code)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Language)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Language)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Currency)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Currency)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Country_date)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Country_date)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 fw-bold">
                    @Html.DisplayNameFor(model => model.IPRequest.Distance)
                </div>
                <div class="col-lg-9">
                    @Html.DisplayFor(model => model.IPRequest.Distance)
                </div>
            </div>
        </form>
    </div>
</div>